# Database Configuration
MYSQL_ROOT_PASSWORD=your_secure_root_password
MYSQL_DATABASE=moodle
MYSQL_USER=moodle
MYSQL_PASSWORD=your_secure_moodle_password

# Moodle Configuration
MOODLE_URL=http://localhost:8080
MOODLE_FULLNAME="My Learning Platform"
MOODLE_SHORTNAME=MLP
MOODLE_ADMIN_USER=admin
MOODLE_ADMIN_PASS=your_secure_admin_password
MOODLE_ADMIN_EMAIL=admin@yourdomain.com

# PHP Configuration
PHP_MEMORY_LIMIT=512M
PHP_MAX_EXECUTION_TIME=300
PHP_UPLOAD_MAX_FILESIZE=100M
PHP_POST_MAX_SIZE=100M

# Port Configuration
MOODLE_PORT=8080

# AWS Configuration (for deployment)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# EC2 Configuration (for deployment)
EC2_HOST=your-ec2-instance-ip
EC2_SSH_KEY=your_private_ssh_key_content

# Docker Registry (optional)
DOCKER_REGISTRY=your-registry.com
DOCKER_IMAGE_NAME=moodle
DOCKER_IMAGE_TAG=latest 